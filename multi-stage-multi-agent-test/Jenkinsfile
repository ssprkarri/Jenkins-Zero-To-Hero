pipeline {
  agent {
    docker { image 'maven:latest' }
    args '-v /root/.m2:/root/.m2'
  }
  stages {
    stage('Checkout') {
        steps {
            git branch: 'main', url: 'https://github.com/ssprkarri/Jenkins-Zero-To-Hero' 
        }
    }
    stage('Build and Run') {
        steps {
            script {
                // Build and run java code
                sh 'mvn install'
                }
            }
    }
  }
}
